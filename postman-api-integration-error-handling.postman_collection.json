	"item": [
		{
			"name": "API Integration",
			"item": [
				{
					"name": "GET – Fetch All Posts",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"pm.test(\"Response is an array\", function () {\r",
									"    const data = pm.response.json();\r",
									"    pm.expect(data).to.be.an(\"array\");\r",
									"});\r",
									"\r",
									"pm.test(\"Each post has an id and title\", function () {\r",
									"    const data = pm.response.json();\r",
									"    pm.expect(data[0]).to.have.property(\"id\");\r",
									"    pm.expect(data[0]).to.have.property(\"title\");\r",
									"});\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "https://jsonplaceholder.typicode.com/posts",
							"protocol": "https",
							"host": [
								"jsonplaceholder",
								"typicode",
								"com"
							],
							"path": [
								"posts"
							]
						},
						"description": "Retrieves a list of posts from a public REST API to validate basic API integration. This request confirms successful communication, response structure, and expected status codes."
					},
					"response": []
				},
				{
					"name": "POST – Create New Post",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {\r",
									"    pm.response.to.have.status(201);\r",
									"});\r",
									"\r",
									"pm.test(\"Response contains created post data\", function () {\r",
									"    const data = pm.response.json();\r",
									"    pm.expect(data).to.have.property(\"title\");\r",
									"    pm.expect(data).to.have.property(\"body\");\r",
									"    pm.expect(data).to.have.property(\"userId\");\r",
									"});\r",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n  \"title\": \"Postman API Test\",\r\n  \"body\": \"Testing API integration\",\r\n  \"userId\": 1\r\n}\r\n",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "https://jsonplaceholder.typicode.com/posts",
							"protocol": "https",
							"host": [
								"jsonplaceholder",
								"typicode",
								"com"
							],
							"path": [
								"posts"
							]
						},
						"description": "Sends a JSON payload to create a new resource via a POST request. This request validates payload structure, response handling, and successful resource creation."
					},
					"response": []
				}
			],
